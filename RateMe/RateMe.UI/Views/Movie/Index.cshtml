@model List<RateMe.Core.Models.Movie>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>List of movies</h2>


    <div class="datagrid">
        <table>
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Title</th>
                    <th>Runtime</th>
                    <th>Release Date</th>
                    <th>Genres</th>
                    <th>Votes</th>
                    <th>Edit</th>
                </tr>
            </thead>
            <tfoot><tr><td colspan="7"><div id="paging"><ul><li><a href="#"><span>Previous</span></a></li><li><a href="#" class="active"><span>1</span></a></li><li><a href="#"><span>2</span></a></li><li><a href="#"><span>3</span></a></li><li><a href="#"><span>4</span></a></li><li><a href="#"><span>5</span></a></li><li><a href="#"><span>Next</span></a></li></ul></div></tr></tfoot>
            <tbody>
                @foreach (var movie in Model)
                {
                    var style = (movie.Id % 2 == 0) ? "alt" : "";

                    <tr class="@style">
                        <td>@movie.Id</td>
                        <td>@movie.Title</td>
                        <td>@movie.Runtime</td>
                        <td>@movie.ReleaseDate</td>
                        <td>@movie.Genres</td>
                        <td>@movie.Votes</td>
                        <td>@Html.ActionLink("Edit", "Edit", "Movie", new { id = movie.Id }, null)</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>

